  <script>
    // Scroll smooth vers le haut si des filtres sont actifs (apr√®s rechargement)
    if (window.location.search.includes('filter')) {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    // D√©tecter et mettre en surbrillance le filtre nouvellement ajout√©
    (function() {
      const urlParams = new URLSearchParams(window.location.search);
      const previousFilters = sessionStorage.getItem('previousFilters');
      const currentFilters = {};
      
      // R√©cup√©rer les filtres actuels depuis l'URL
      if (urlParams.get('filterHour')) currentFilters.hour = urlParams.get('filterHour');
      if (urlParams.get('filterDate')) currentFilters.date = urlParams.get('filterDate');
      if (urlParams.get('filterSource')) currentFilters.source = urlParams.get('filterSource');
      if (urlParams.get('filterBrowser')) currentFilters.browser = urlParams.get('filterBrowser');
      if (urlParams.get('filterDevice')) currentFilters.device = urlParams.get('filterDevice');
      
      // Comparer avec les filtres pr√©c√©dents
      if (previousFilters) {
        try {
          const previous = JSON.parse(previousFilters);
          
          // Trouver le filtre nouvellement ajout√©
          Object.keys(currentFilters).forEach(key => {
            if (!previous[key] || previous[key] !== currentFilters[key]) {
              // Ce filtre vient d'√™tre ajout√©
              const badge = document.querySelector(`[data-filter-type="${key}"][data-filter-value="${currentFilters[key]}"]`);
              if (badge) {
                badge.classList.add('filter-highlight');
                
                // Retirer la classe apr√®s l'animation
                setTimeout(() => {
                  badge.classList.remove('filter-highlight');
                }, 1500);
              }
            }
          });
        } catch (e) {
          console.error('Erreur lors de la comparaison des filtres:', e);
        }
      }
      
      // Sauvegarder les filtres actuels pour la prochaine fois
      sessionStorage.setItem('previousFilters', JSON.stringify(currentFilters));
    })();

    // G√©rer l'affichage de la p√©riode personnalis√©e
    const periodSelect = document.getElementById('periodSelect');
    const customPeriod = document.getElementById('customPeriod');
    
    if (periodSelect && customPeriod) {
      periodSelect.addEventListener('change', function() {
        if (this.value === 'custom') {
          customPeriod.style.display = 'flex';
        } else {
          customPeriod.style.display = 'none';
          // D√©sactiver les champs de date pour √©viter qu'ils soient envoy√©s
          const startInput = customPeriod.querySelector('input[name="start"]');
          const endInput = customPeriod.querySelector('input[name="end"]');
          if (startInput) startInput.disabled = true;
          if (endInput) endInput.disabled = true;
          // Soumettre automatiquement le formulaire pour les p√©riodes pr√©d√©finies
          this.form.submit();
        }
      });
      
      // R√©activer les champs si on est en mode personnalis√©
      if (periodSelect.value === 'custom') {
        const startInput = customPeriod.querySelector('input[name="start"]');
        const endInput = customPeriod.querySelector('input[name="end"]');
        if (startInput) startInput.disabled = false;
        if (endInput) endInput.disabled = false;
      }
    }

    // Donn√©es pour les graphiques
    const visitsByDayData = <%- JSON.stringify(visitsByDay || []) %>;
    const visitsByHourData = <%- JSON.stringify(visitsByHour || []) %>;
    const trafficSourcesData = <%- JSON.stringify(trafficSources || []) %>;

    // Graphique temporel des visites
    const visitsCtx = document.getElementById('visitsChart');
    if (visitsCtx && visitsByDayData.length > 0) {
      const labels = visitsByDayData.map(item => {
        const date = new Date(item.date);
        return date.toLocaleDateString('fr-FR', { day: 'numeric', month: 'short' });
      });
      const data = visitsByDayData.map(item => item.visits);

      const visitsChart = new Chart(visitsCtx, {
        type: 'line',
        data: {
          labels: labels,
          datasets: [{
            label: 'Visites',
            data: data,
            borderColor: '#6c5ce7',
            backgroundColor: 'rgba(108, 92, 231, 0.1)',
            tension: 0.4,
            fill: true
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          onClick: (event, elements) => {
            if (elements.length > 0) {
              const clickedIndex = elements[0].index;
              const clickedDate = visitsByDayData[clickedIndex].date;
              
              // Construire l'URL avec le filtre date
              const url = new URL(window.location);
              url.searchParams.set('filterDate', clickedDate);
              
              // Scroll vers le haut avant de changer de page
              window.scrollTo({ top: 0, behavior: 'smooth' });
              
              // Attendre un peu pour que le scroll commence, puis recharger
              setTimeout(() => {
                window.location.href = url.toString();
              }, 300);
            }
          },
          onHover: (event, elements) => {
            visitsCtx.style.cursor = elements.length > 0 ? 'pointer' : 'default';
          },
          plugins: {
            legend: {
              display: false
            },
            tooltip: {
              callbacks: {
                afterLabel: () => {
                  return 'Cliquez pour filtrer par date';
                }
              }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              ticks: {
                stepSize: 1
              }
            }
          }
        }
      });
    } else if (visitsCtx) {
      visitsCtx.parentElement.innerHTML = '<p class="dashboard-empty">Aucune donn√©e disponible</p>';
    }

    // Graphique des heures de pointe
    const hoursCtx = document.getElementById('hoursChart');
    if (hoursCtx && visitsByHourData.length > 0) {
      // Cr√©er un tableau complet de 0 √† 23 heures
      const hoursData = Array(24).fill(0);
      visitsByHourData.forEach(item => {
        hoursData[item.hour] = item.visits;
      });

      const labels = Array.from({ length: 24 }, (_, i) => i + 'h');
      const data = hoursData;

      const hoursChart = new Chart(hoursCtx, {
        type: 'bar',
        data: {
          labels: labels,
          datasets: [{
            label: 'Visites',
            data: data,
            backgroundColor: '#6c5ce7',
            borderRadius: 4
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          onClick: (event, elements) => {
            if (elements.length > 0) {
              const clickedIndex = elements[0].index;
              const clickedHour = clickedIndex;
              
              // Construire l'URL avec le filtre heure
              const url = new URL(window.location);
              url.searchParams.set('filterHour', clickedHour);
              
              // Scroll vers le haut avant de changer de page
              window.scrollTo({ top: 0, behavior: 'smooth' });
              
              // Attendre un peu pour que le scroll commence, puis recharger
              setTimeout(() => {
                window.location.href = url.toString();
              }, 300);
            }
          },
          onHover: (event, elements) => {
            hoursCtx.style.cursor = elements.length > 0 ? 'pointer' : 'default';
          },
          plugins: {
            legend: {
              display: false
            },
            tooltip: {
              callbacks: {
                afterLabel: () => {
                  return 'Cliquez pour filtrer par heure';
                }
              }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              ticks: {
                stepSize: 1
              }
            }
          }
        }
      });
    } else if (hoursCtx) {
      hoursCtx.parentElement.innerHTML = '<p class="dashboard-empty">Aucune donn√©e disponible</p>';
    }

    // Graphique camembert sources de trafic
    const trafficCtx = document.getElementById('trafficChart');
    if (trafficCtx && trafficSourcesData.length > 0) {
      const labels = trafficSourcesData.map(item => item.source);
      const data = trafficSourcesData.map(item => item.visits);
      
      // Couleurs pour le camembert
      const colors = ['#6c5ce7', '#a29bfe', '#fd79a8', '#fdcb6e', '#00b894', '#00cec9'];

      const trafficChart = new Chart(trafficCtx, {
        type: 'doughnut',
        data: {
          labels: labels,
          datasets: [{
            data: data,
            backgroundColor: colors.slice(0, labels.length),
            borderWidth: 2,
            borderColor: '#fff'
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          onClick: (event, elements) => {
            if (elements.length > 0) {
              const clickedIndex = elements[0].index;
              const clickedSource = labels[clickedIndex];
              
              // Construire l'URL avec le filtre source
              const url = new URL(window.location);
              url.searchParams.set('filterSource', clickedSource);
              
              // Scroll vers le haut avant de changer de page
              window.scrollTo({ top: 0, behavior: 'smooth' });
              
              // Attendre un peu pour que le scroll commence, puis recharger
              setTimeout(() => {
                window.location.href = url.toString();
              }, 300);
            }
          },
          onHover: (event, elements) => {
            trafficCtx.style.cursor = elements.length > 0 ? 'pointer' : 'default';
          },
          plugins: {
            legend: {
              position: 'right'
            },
            tooltip: {
              callbacks: {
                afterLabel: () => {
                  return 'Cliquez pour filtrer par source';
                }
              }
            }
          }
        }
      });
    } else if (trafficCtx) {
      trafficCtx.parentElement.innerHTML = '<p class="dashboard-empty">Aucune donn√©e disponible</p>';
    }

    // G√©rer les clics sur les lignes de tableaux pour filtrer
    document.querySelectorAll('.filterable-row').forEach(row => {
      row.addEventListener('click', function() {
        const filterType = this.getAttribute('data-filter-type');
        const filterValue = this.getAttribute('data-filter-value');
        
        if (filterType && filterValue) {
          const url = new URL(window.location);
          const filterParam = 'filter' + filterType.charAt(0).toUpperCase() + filterType.slice(1);
          url.searchParams.set(filterParam, filterValue);
          
          // Scroll vers le haut avant de changer de page
          window.scrollTo({ top: 0, behavior: 'smooth' });
          
          // Attendre un peu pour que le scroll commence, puis recharger
          setTimeout(() => {
            window.location.href = url.toString();
          }, 300);
        }
      });
    });
  </script>

