<script>
(function() {
  const previewModeButtons = document.querySelectorAll('.preview-mode-button');
  const previewDevice = document.getElementById('previewDevice');
  
  previewModeButtons.forEach((button) => {
    button.addEventListener('click', () => {
      const mode = button.dataset.previewMode;
      previewModeButtons.forEach((btn) => btn.classList.toggle('active', btn === button));
      previewDevice?.setAttribute('data-mode', mode);
    });
  });
})();
</script>

